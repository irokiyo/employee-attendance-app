<?xml version="1.0"?>
<ruleset name="Laravel App Standard">
    <description>Laravel friendly coding standard</description>

    <file>./app</file>
    <file>./routes</file>
    <file>./config</file>
    <file>./database/seeders</file>
    <file>./tests</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>database/migrations/*</exclude-pattern>

    <rule ref="PSR12"/>
</ruleset>